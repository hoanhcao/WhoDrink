<resources >

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.CustomSpinner">
        <item name="android:spinnerMode">dialog</item>
        <item name="android:textColor">@color/spinnerTextColor</item>
        <item name="android:background">@drawable/spinner_bg</item>
    </style>
    <style name="AppTheme.ButtonImage">
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:src">@drawable/search_16</item>
        <item name="android:background">@color/imgButtonColor</item>
    </style>
    <style name="AppTheme.RestaurantLayout">
        <item name="android:background">@drawable/restaurant_item_bg</item>
    </style>
    <style name="AppTheme.RestaurantLayout.TitleText">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorTextTitle</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="AppTheme.RestaurantLayout.DescText">
        <item name="android:foreground">@color/colorTextDesc</item>
    </style>
